@model IEnumerable<LabProjeto.Models.JogoModel>
@using Microsoft.AspNetCore.Identity;

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Lista de Jogos";
}

<h1>Lista de Jogos</h1>

@if (User.IsInRole("Funcionario") || User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Adicionar novo jogo</a>
    </p>
}


<table class="table">
    <thead>
        <tr>
            <th>
                Foto
            </th>

            <th>
                Nome
            </th>
            
            <th>
                Preço
            </th>

            <th>
                Categoria
            </th>

            <th>
                Plataforma
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <img src="/Fotos/Jogos/@item.Foto" width="100" height="100">
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.categoria.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.plataforma)
            </td>
            <td>
                @if (SignInManager.IsSignedIn(User))
                    {
                        if (User.IsInRole("Funcionario") || User.IsInRole("Admin"))
                        {

                            <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id"> Apagar </a>

                        }
                        <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    }
                    
            </td>
        </tr>
}
    </tbody>
</table>
