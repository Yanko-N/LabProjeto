@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore
@model LabProjeto.Models.UsersRolesViewModel

@{
    ViewData["Title"] = "Editar Conta";
}

<h1>Editar</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" disabled />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Role"></label>
        <select asp-for="Role" asp-items="Model.Roles" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-dark pb-2" >Guardar</button>
</form>

<div>
    <a class="btn btn-dark pb-2" asp-action="Index">Voltar a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
