@model LabProjeto.Models.PerfilModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar</h1>

<h3>Você tem a certeza que quer apagar a conta?</h3>
<div>
    <h4>PerfilModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Utilizador
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.utilizador.Id)
        </dd>
        <dt class = "col-sm-2">
            Saldo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.saldo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à Lista</a>
    </form>
</div>
