@model LabProjeto.Models.PerfilModel

@{
    ViewData["Title"] = "Apagar Perfil";
}



<h3>Tem Certeza que quer apagar o perfil</h3>
<div>
    <h4>PerfilModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.utilizador)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.utilizador.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.saldo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.saldo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-dark pb-2" /> |
        <a asp-action="Index" class="btn btn-dark pb-2">Voltar a Lista</a>
    </form>
</div>
