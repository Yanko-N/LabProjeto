@model LabProjeto.Models.PerfilModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Utilizador</label>
                <select asp-for="utilizadorId" class ="form-control" asp-items="ViewBag.utilizadorId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Saldo</label>
                <input asp-for="saldo" class="form-control" />
                <span asp-validation-for="saldo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
