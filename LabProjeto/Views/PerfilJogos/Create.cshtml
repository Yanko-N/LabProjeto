@model LabProjeto.Models.PerfilJogos

@{
    ViewData["Title"] = "Adicionar";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Perfil</label>
                <select asp-for="perfilId" class ="form-control" asp-items="ViewBag.perfilId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Jogo</label>
                <select asp-for="jogoId" class ="form-control" asp-items="ViewBag.jogoId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-dark pb-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark pb-2">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
