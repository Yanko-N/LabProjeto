@model IEnumerable<LabProjeto.Models.CategoriaModel>

@{
    ViewData["Title"] = "Lista de Categotrias";
}

<h1>Lista de Categorias</h1>

<p>
    <a asp-action="Create" class="btn btn-primary pb-2" >Adicionar nova categoria</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Descrição
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark pb-2">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark pb-2">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-dark pb-2">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
