@model LabProjeto.Models.PerfilCategoria

@{
    ViewData["Title"] = "Lista de Categorias Favoritas";
}

<h1>Adicionar Categoria</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Categoria</label>
                <select asp-for="categoriaId" class ="form-control" asp-items="ViewBag.categoriaId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-dark pb-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark pb-2" asp-action="Index">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
