@model LabProjeto.Models.PerfilCategoria

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
         <dt class="col-sm-2">
            Categoria
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.categoria.Nome)
        </dd>

        <dt class = "col-sm-2">
            Descrição
        </dt>
       
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.categoria.Descricao)
        </dd>
       
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Voltar à Lista</a>
</div>
