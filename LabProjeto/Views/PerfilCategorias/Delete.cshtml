@model LabProjeto.Models.PerfilCategoria

@{
    ViewData["Title"] = "Apagar";
}

<h1>Apagar Categoria</h1>

<h3>Você tem a certeza que quer remover a @Model.categoria.Nome</h3>
<div>
    <hr />
    <dl class="row">
        
        <dt class = "col-sm-1">
            Categoria
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.categoria.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar" class="btn btn-dark pb-2" /> |
        <a asp-action="Index" class="btn btn-dark pb-2">Voltar à Lista</a>
    </form>
</div>
